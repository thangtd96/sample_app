<% provide :title, @user.name %>
<%= @user.name %>, <%= @user.email %>
<h1>
  <%= gravatar_for @user %>
  <%= @user.name %><%= render "shared/follow_form" if logged_in? %>
</h1>
<section class="stats">
  <%= render "shared/stats" %>
</section>
<div class="col-md-8">
  <% if @user.microposts.any? %>
    <h3><%= t "post.microposts" %> (<%= @user.microposts.size %>)</h3>
    <ol class="microposts">
      <%= render @microposts %>
    </ol>
    <%= will_paginate @microposts %>
  <% end %>
</div>
